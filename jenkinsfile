pipeline{
    agent any
    parameters{
        string(name: 'SPEC', defaultValue: "cypress/e2e/1-getting-started/**", description: "Enter Spec path")
        choice(name: 'BROWSER', choices: ['chrome', 'firefox'], description: "Choose Browser")
    }

    // options{
    //     ansiColor('xtrem')
    // }

    stages{
        stage('Building'){
            steps{
                echo "Building the Application"
            }
        }
        stage('Testing'){
            steps{
                bat "npm i"
                bat "npm run test --browser ${BROWSER}"
            }
        }
        stage('Deploying'){
            steps{
                echo "Deploying the Application"
            }
        } 
    }
    post{
        always{
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'C:/Users/M Bilal Rafaqat/jenkins-demo/allure-report', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
        }
    }
}